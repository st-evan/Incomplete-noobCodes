#_Guess the number (User)
import random
from random import randint
def computer_guess(x):
    low = 1; high = x; feedback = ''
    while feedback != 'c':
        if low != high: #this bcuz random module would throw AN ERROR if l and h are the same number
            guess = random.randint(low, high)
        else:
            guess = low #could also be high because low = high too
        feedback = input(f"Is {guess} too high(H),too low(L) or correct(C)").lower()
        if feedback == 'h':
            high = guess - 1
        elif feedback == 'l':
            low = guess + 1
    print(f"Computer guess {guess} correct")
computer_guess(10)
